@{
    ViewData["Title"] = "Profile";
    var account = ViewBag.account;
}

<h2>Ur Profile</h2>
<div class="row">
    <div class="col-md-4">
        <img src="@account.NthAvatar" alt="" style="width:100%" />
    </div>
    <div class="col-md-8">
        <h2>Fullname: @account.NthName</h2>
        <h3>Email: @account.NthEmail</h3>
        <h3>Phone: @account.NthPhone</h3>
        <h3>Address: @account.NthAddress</h3>
        <h3>Bio: @account.NthBio</h3>
        <h3>
            Gender:
            @if (account.NthGender == 1)
            {
                <span>Male</span>
            }
            else
            {
                <span>Female</span>
            }
        </h3>
        <h3>Birthday @account.NthBirthday</h3>
        <p>
            <a asp-controller="NthAccount" asp-action="NthIndex" class="btn btn-sm btn-danger">Back to list</a>
        </p>
    </div>
</div>
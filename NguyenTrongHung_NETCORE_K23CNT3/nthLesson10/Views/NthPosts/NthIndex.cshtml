@model IEnumerable<nthLesson10.Models.NthPost>

@{
    ViewData["Title"] = "Quản lý bài viết";
}


<div class="d-flex justify-content-between">
	<h1>@ViewData["Title"]</h1>
    <p>
        <a asp-action="NthCreate" class="btn btn-info">Create New</a>
    </p>
</div>
<table class="table table-bordered mt-2">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NthId)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.NthTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NthImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NthContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NthStatus)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NthId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NthTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NthImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NthContent)
            </td>
            <td class="text-center">
                    @if(item.NthStatus == true)
                    {
                        <spam class="badge bg-success">Hiển thị</spam>
                    }
                    else
                    {
                        <spam class="badge bg-danger">Ẩn</spam>
                    }
                </td>
            <td>
                    <a asp-action="NthEdit" asp-route-NthId="@item.NthId" class="btn btn-success">Edit</a> |
                    <a asp-action="NthDetails" asp-route-NthId="@item.NthId" class="btn btn-info">Details</a> |
                    <a asp-action="NthDelete" asp-route-NthId="@item.NthId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

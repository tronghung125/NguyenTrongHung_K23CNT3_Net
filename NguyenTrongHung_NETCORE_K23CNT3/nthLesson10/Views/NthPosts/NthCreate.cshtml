@model nthLesson10.Models.NthPost

@{
    ViewData["Title"] = "Thêm mới bài viết";
}

<form asp-action="NthCreate" enctype="multipart/form-data">
    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-header">
            <h2 class="text-center my-4">@ViewData["Title"]</h2>
        </div>

        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="NthTitle" class="form-label fw-semibold"></label>
                <input asp-for="NthTitle" class="form-control" placeholder="Nhập tiêu đề bài viết" />
                <span asp-validation-for="NthTitle" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NthImage" class="form-label fw-semibold"></label>
                <input asp-for="NthImage" class="form-control" type="file" />
                <span asp-validation-for="NthImage" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NthContent" class="form-label fw-semibold"></label>
                <textarea asp-for="NthContent" class="form-control" rows="4" placeholder="Nhập nội dung bài viết"></textarea>
                <span asp-validation-for="NthContent" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NthStatus" class="form-label fw-semibold"></label>
                <select asp-for="NthStatus" class="form-select">
                    <option value="">--Chọn trạng thái--</option>
                    <option value="true">Hiển thị</option>
                    <option value="false">Ẩn</option>
                </select>
                <span asp-validation-for="NthStatus" class="text-danger"></span>
            </div>
        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary me-2">Ghi lại</button>
            <a asp-action="NthIndex" class="btn btn-secondary">Quay lại danh sách</a>
        </div>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

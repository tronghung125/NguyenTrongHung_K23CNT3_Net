@model nthLesson10.Models.NthPost

@{
    ViewData["Title"] = "Chi tiết bài viết";
}

<div class="card shadow-sm mx-auto mt-4" style="max-width: 600px;">
    <div class="card-header bg-primary text-white">
        <h2 class="text-center">@ViewData["Title"]</h2>
    </div>

    <div class="card-body">
        <h5 class="card-title mb-3 fw-bold">@Model.NthTitle</h5>

        @if (!string.IsNullOrEmpty(Model.NthImage))
        {
            <img src="~/@Model.NthImage" alt="Ảnh bài viết" class="img-fluid rounded mb-3" />
        }
        else
        {
            <p class="text-muted">(Không có hình ảnh)</p>
        }

        <p class="card-text">
            <strong>Nội dung:</strong><br />
            @Model.NthContent
        </p>

        <p class="card-text">
            <strong>Trạng thái:</strong>
            @(Model.NthStatus == true ? "Hiển thị" : "Tạm khóa")
        </p>
    </div>

    <div class="card-footer text-center">
        <a asp-action="NthEdit" asp-route-nthId="@Model.NthId" class="btn btn-warning me-2">✏️ Chỉnh sửa</a>
        <a asp-action="NthIndex" class="btn btn-secondary">⬅️ Quay lại danh sách</a>
    </div>
</div>
